@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}

<section class="module-hero hero-departments">
    <div>
        <h2 class="mb-1">Departments</h2>
        <p>Manage clinical units and their locations across the hospital.</p>
    </div>
    <img src="https://images.pexels.com/photos/1170979/pexels-photo-1170979.jpeg?auto=compress&cs=tinysrgb&w=1200" alt="Hospital department hallway" />
</section>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0 text-muted">Department Directory</h5>
    <a class="btn btn-primary" asp-action="Create">Add Department</a>
</div>

<div class="module-table-wrap">
    <table class="table table-striped table-bordered mb-0">
        <thead><tr><th>Name</th><th>Location</th><th style="width:180px;">Actions</th></tr></thead>
        <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>@department.Location</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@department.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@department.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
