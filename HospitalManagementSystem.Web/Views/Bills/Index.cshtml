@model IEnumerable<Bill>
@{
    ViewData["Title"] = "Billing";
}

<section class="module-hero hero-bills">
    <div>
        <h2 class="mb-1">Billing</h2>
        <p>Monitor invoices, due dates, and payment status in one place.</p>
    </div>
    <img src="https://images.pexels.com/photos/6129687/pexels-photo-6129687.jpeg?auto=compress&cs=tinysrgb&w=1200" alt="Medical team discussing records and billing" />
</section>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0 text-muted">Billing Ledger</h5>
    <a class="btn btn-primary" asp-action="Create">Create Bill</a>
</div>

<div class="module-table-wrap">
    <table class="table table-striped table-bordered mb-0">
        <thead><tr><th>Patient</th><th>Appointment</th><th>Amount</th><th>Issued</th><th>Due</th><th>Status</th><th style="width:180px;">Actions</th></tr></thead>
        <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.Patient?.FullName</td>
                <td>@bill.AppointmentId</td>
                <td>@bill.Amount.ToString("C")</td>
                <td>@bill.IssuedOn.ToString("yyyy-MM-dd")</td>
                <td>@bill.PaymentDueDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (bill.IsPaid)
                    {
                        <span class="badge text-bg-success">Paid</span>
                    }
                    else
                    {
                        <span class="badge text-bg-warning">Pending</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@bill.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@bill.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
