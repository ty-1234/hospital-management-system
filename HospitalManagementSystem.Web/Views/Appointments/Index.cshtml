@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "Appointments";
}

<section class="module-hero hero-appointments">
    <div>
        <h2 class="mb-1">Appointments</h2>
        <p>Coordinate schedules and maintain smooth patient flow.</p>
    </div>
    <img src="https://images.pexels.com/photos/4173239/pexels-photo-4173239.jpeg?auto=compress&cs=tinysrgb&w=1200" alt="Doctor reviewing appointment notes" />
</section>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0 text-muted">Schedule Board</h5>
    <a class="btn btn-primary" asp-action="Create">Schedule Appointment</a>
</div>

<div class="module-table-wrap">
    <table class="table table-striped table-bordered mb-0">
        <thead><tr><th>Patient</th><th>Doctor</th><th>Start</th><th>End</th><th>Status</th><th>Reason</th><th style="width:180px;">Actions</th></tr></thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patient?.FullName</td>
                <td>@item.Doctor?.FullName</td>
                <td>@item.StartTime.ToLocalTime().ToString("g")</td>
                <td>@item.EndTime.ToLocalTime().ToString("g")</td>
                <td>@item.Status</td>
                <td>@item.Reason</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
